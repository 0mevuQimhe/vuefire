{
  "include": ["../src/**/*.ts"],
  "exclude": ["**/*.spec.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "..",
    "outDir": "dist",
    "sourceMap": false,
    "noEmit": true,
    "paths": {
      "vuefire": ["../src"]
    },

    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "skipLibCheck": true,

    "noUnusedLocals": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": false,
    "strict": true,
    "isolatedModules": true,

    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"]
  }
}
