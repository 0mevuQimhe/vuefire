{
  "name": "vuefire",
  "version": "3.0.0-alpha.2",
  "description": "Official Firebase bindings for Vue.js",
  "main": "dist/vuefire.cjs.js",
  "unpkg": "dist/vuefire.global-vue-2.js",
  "jsdelivr": "dist/vuefire.global-vue-2.js",
  "module": "dist/vuefire.esm-bundler.js",
  "types": "dist/vuefire.d.ts",
  "sideEffects": false,
  "author": {
    "name": "Eduardo San Martin Morote",
    "email": "posva13@gmail.com"
  },
  "funding": "https://github.com/sponsors/posva",
  "scripts": {
    "docs": "vitepress dev docs",
    "build:docs": "vitepress build docs",
    "build": "rollup -c rollup.config.js",
    "build:dts": "api-extractor run --local --verbose",
    "release": "bash scripts/release.sh",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "size": "size-limit",
    "lint": "prettier -c --parser typescript \"{src,__tests__,e2e}/**/*.[jt]s?(x)\"",
    "lint:fix": "yarn run lint --write",
    "test:types": "tsc --build tsconfig.json",
    "test:unit": "jest --coverage",
    "test": "yarn run test:types && yarn run test:unit && yarn run build && yarn run build:dts"
  },
  "files": [
    "dist/*.js",
    "dist/vuefire.d.ts",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "vue",
    "firebase",
    "vuefire",
    "vuexfire",
    "vuex",
    "composition",
    "api"
  ],
  "license": "MIT",
  "dependencies": {
    "vue-demi": "latest"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.4.0",
    "vue": "^2.6.0 || >=3.2.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "devDependencies": {
    "conventional-changelog-cli": "^2.0.34",
    "firebase": "^8.1.2",
    "firebase-mock": "^2.3.2",
    "lint-staged": "^11.0.0",
    "prettier": "^2.0.5",
    "typescript": "~4.3.4",
    "vue": "^3.0.0",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "size-limit": [
    {
      "path": "size-checks/vuefire-firestore.js"
    },
    {
      "path": "size-checks/vuefire-rtdb.js"
    },
    {
      "path": "size-checks/vuefire-full.js"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vuejs/vuefire.git"
  },
  "bugs": {
    "url": "https://github.com/vuejs/vuefire/issues"
  },
  "homepage": "https://github.com/vuejs/vuefire#readme"
}
