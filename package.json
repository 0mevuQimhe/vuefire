{
  "name": "vuefire",
  "version": "3.0.0-alpha.3",
  "description": "Official Firebase bindings for Vue.js",
  "packageManager": "pnpm@7.12.2",
  "unpkg": "dist/vuefire.global-vue-2.js",
  "jsdelivr": "dist/vuefire.global-vue-2.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "author": {
    "name": "Eduardo San Martin Morote",
    "email": "posva13@gmail.com"
  },
  "funding": "https://github.com/sponsors/posva",
  "scripts": {
    "docs": "vitepress dev docs --port 3000",
    "docs:build": "vitepress build docs",
    "build": "unbuild",
    "release": "node scripts/release.mjs",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "play": "pnpm run -C playground dev",
    "lint": "prettier -c --parser typescript \"{src,__tests__,e2e}/**/*.[jt]s?(x)\"",
    "lint:fix": "pnpm run lint --write",
    "test:types": "tsc --build tsconfig.json",
    "test:unit": "vitest --coverage",
    "firebase:emulators": "firebase emulators:start",
    "test:dev": "vitest",
    "test": "pnpm run lint && pnpm run test:unit run && pnpm run build"
  },
  "keywords": [
    "vue",
    "firebase",
    "vuefire",
    "vuexfire",
    "vuex",
    "composition",
    "api"
  ],
  "license": "MIT",
  "dependencies": {
    "vue-demi": "latest"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.4.0",
    "firebase": "^9.0.0",
    "vue": "^2.6.0 || >=3.2.0"
  },
  "peerDependenciesMeta": {
    "firebase": {
      "optional": true
    },
    "@vue/composition-api": {
      "optional": true
    }
  },
  "devDependencies": {
    "@vitest/coverage-c8": "^0.24.3",
    "@vue/runtime-core": "^3.2.41",
    "@vue/test-utils": "^2.1.0",
    "chalk": "^5.1.2",
    "conventional-changelog-cli": "^2.0.34",
    "enquirer": "^2.3.6",
    "execa": "^6.1.0",
    "firebase": "^9.12.1",
    "focus-visible": "^5.2.0",
    "happy-dom": "^7.5.13",
    "lint-staged": "^13.0.3",
    "minimist": "^1.2.7",
    "p-series": "^3.0.0",
    "prettier": "^2.0.5",
    "semver": "^7.3.8",
    "typescript": "~4.8.4",
    "unbuild": "^0.9.4",
    "vitepress": "1.0.0-alpha.21",
    "vitest": "^0.24.3",
    "vue": "^3.2.41",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.mjs"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "size-limit": [
    {
      "path": "size-checks/vuefire-firestore.js"
    },
    {
      "path": "size-checks/vuefire-rtdb.js"
    },
    {
      "path": "size-checks/vuefire-full.js"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vuejs/vuefire.git"
  },
  "bugs": {
    "url": "https://github.com/vuejs/vuefire/issues"
  },
  "homepage": "https://github.com/vuejs/vuefire#readme"
}
