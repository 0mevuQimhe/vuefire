{
  "extends": [
    "@nuxtjs/eslint-config-typescript"
  ],
  "rules": {
    // TS already checks this
    "no-use-before-define": "off",
    "@typescript-eslint/no-unused-vars": [
      "off"
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "vue/require-v-for-key": "off",
  }
}
